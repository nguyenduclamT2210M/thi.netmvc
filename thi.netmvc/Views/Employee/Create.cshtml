@model thi.netmvc.Models.EmployeeModel
@{
}
<div class="container">
    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @*@Html.HiddenFor(m => m.Id)*@
        <div class="mb-3">
            @Html.LabelFor(m => m.EmployeeName)
            @Html.TextBoxFor(m => m.EmployeeName)
            <p>
                @Html.ValidationMessageFor(m => m.EmployeeName,"",
            new {@class="text-danger" })
            </p>

        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.IdUser)
            @Html.TextBoxFor(m => m.IdUser)
            <p>
                @Html.ValidationMessageFor(m => m.IdUser,"",
            new {@class="text-danger" })
            </p>

        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.IDepartment)
            @Html.TextBoxFor(m => m.IDepartment)
            <p>
                @Html.ValidationMessageFor(m => m.IDepartment,"",
            new {@class="text-danger" })
            </p>

        </div>
       
        <button type="submit" class="btn btn-primary">Submit</button>
    }
</div>